<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TODO List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <style>
        .task-done {
            text-decoration: line-through;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TODO List</a>

            <ul class="navbar-nav d-flex flex-row">
                <li class="nav-item m-2">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item m-2">
                    <a class="nav-link" href="/shopping">Shopping List</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container my-4">
        <h2 class="text-center">TO-DO List</h2>
        <h4 class="text-center my-2">Add an item to the list</h4>

        <form action="/submit" method="POST">
            <div class="mb-3">
                <label for="task" class="form-label">Task</label>
                <input type="text" class="form-control" name="task">
                <input type="submit" class="btn btn-primary mt-3" value="Add to List">
            </div>
        </form>

        <div class="my-5 list-group" id="todo-list">
            <h2>My TODO List</h2>
            <% if (locals.tasks) { %>

                <% for( let i of tasks ) { %>
                    <label class="list-group-item" id="list-item">
                        <input class="form-check-input me-1" type="checkbox">
                        <%= i %>
                    </label>
                    <% } %>

                        <% } %>
        </div>
    </div>

    <script>
        const listItems = document.getElementById('todo-list');
        listItems.addEventListener('change', (e) => {
            if (e.target.checked) {
                e.target.parentNode.classList.add('task-done')
            } else {
                e.target.parentNode.classList.remove('task-done')
            }
        });
    </script>
</body>

</html>